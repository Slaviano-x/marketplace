<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/purple_500</item>
    </style>

    <style name="Component.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/edit_text_box_stroke_color</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColorHint">@color/edit_text_accent_color</item>
        <item name="endIconTint">@color/edit_text_accent_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="Component.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
</resources>